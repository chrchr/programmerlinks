= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "name"
    = f.text_field :name
  .field
    = f.label :url, "url"
    = f.text_field :url
  .field
    = f.label :username, "username"
    = f.text_field :username
  .actions
    = f.submit 'submit'
